extends layouts/default

block content
    main
        h1 Add Local Account

        if message
            p.flash-message= message

        form(action="/connect/local" method="POST")
            label
                span Email
                input(type="email" name="email")
            label
                span Password
                input(type="password" name="password")

            input(type="submit" name="submit" value="Add Local")

        a(href="/profile") Back to profile
